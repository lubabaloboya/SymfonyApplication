{% extends 'base.html.twig' %}
{% block body %}
    <a class="btn btn-primary" href="/todos/create">Create Todo</a>
    <table class="table table-striped" style="    margin-top: 0; margin-bottom: 0;">
    <thead>
      <tr>
        <th>#</th>
        <th>Todo</th>
        <th>Due Date</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
        {% for todo in todos %}
      <tr>
        <td>{{todo.id}}</td>
        <td>{{todo.name}}</td>
        <td>{{todo.dueDate|date('F j, Y, g:i a')}}</td>
        <td>
            <a href="/todos/details/{{todo.id}}" class="btn btn-success">View</a>
            <a href="/todos/edit/{{todo.id}}" class="btn btn-default">Edit</a>
            <a href="/todos/delete/{{todo.id}}" class="btn btn-danger">Delete</a>
        </td>
      </tr>
        {% endfor%}
    </tbody>
  </table>
{% endblock %}